<% content_for :content_header do %>
  <b>Purchasing Group / Overview </b>
  <div class="d-flex gap-2 flex-wrap">

    <%= link_to purch_groups_path do %>
      <button class="btn btn-sm btn-outline-secondary text-white">
        <i class="ti ti-arrow-back-up"></i>
        Back
      </button>
    <% end %>
    <%= link_to edit_purch_group_path(@purch_group), class: 'btn btn-sm btn-secondary' do %>
      <i class="ti ti-edit"></i>
      Edit
    <% end %>
  </div>
<% end %>

<% content_for :content do %>
  <%= render @purch_group %>
<% end %>

<%= render "layouts/wrapper", sidebar: true %>