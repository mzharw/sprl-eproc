<% content_for :content_header do %>
  <b>Party</b>
  <%= link_to new_party_path do %>
    <button class="btn btn-sm btn-secondary">
      <i class="ti ti-plus"></i>
      New entry
    </button>
  <% end %>
<% end %>
<% content_for :content do %>
    <%= render 'list', parties: @parties %>
    <div class="d-flex flex-column justify-content-end h-100 w-100 position-sticky bottom-0" style="backdrop-filter: blur(50px);">
      <div style="width: 100%; height: 50px;" class="border shadow-lg">
        <%= paginate @parties %>
      </div>
    </div>
<% end %>
<%= render "layouts/wrapper" , sidebar: true %>