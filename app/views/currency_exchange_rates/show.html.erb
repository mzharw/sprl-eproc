<% content_for :content_header do %>
  <b>Exchange Rate / Overview </b>
  <div class="d-flex gap-2 flex-wrap">

    <%= link_to currency_exchange_rates_path do %>
      <button class="btn btn-sm btn-light-warning">
        <i class="ti ti-arrow-back-up"></i>
        Back
      </button>
    <% end %>
    <%= link_to edit_currency_exchange_rate_path(@currency_exchange_rate), class: 'btn btn-sm btn-secondary' do %>
      <i class="ti ti-edit"></i>
      Edit
    <% end %>
  </div>
<% end %>

<% content_for :content do %>
  <%= render @currency_exchange_rate %>
<% end %>

<%= render "layouts/wrapper", sidebar: true %>