<% content_for :content_header do %>
  <b>Purchasing Organization</b>
  <%= link_to new_purch_org_path do %>
    <button class="btn btn-sm btn-secondary">
      <i class="ti ti-plus"></i>
      New entry
    </button>
  <% end %>
<% end %>
<% content_for :content do %>
  <div style="overflow: auto; height: calc(100% - 50px);">
    <table class="table table-striped table-hover table-bordered">
      <thead>
          <tr>
              <th>PR Number</th>
              <th>PR Type</th>
              <th>Contract</th>
              <th>Description</th>
              <th>Plant Code</th>
              <th>Plant</th>
              <th>Non AFE Code</th>
              <th>Non AFE</th>
              <th>Purchasing org Code</th>
              <th>Workflow State</th>
              <th>State</th>
              <th>Created By</th>
              <th>Subtotal</th>
              <th>Created at</th>
              <th>Cancel Remark</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody>
        <%= turbo_frame_tag "purch_orgs" do %>
          <% @purch_orgs.each do |purch_org| %>
            <%= render purch_org %>
          <% end %>
        <% end %> 
      </tbody>
    </table>
  </div>
<% end %>
<%= render "layouts/wrapper", sidebar: true %>