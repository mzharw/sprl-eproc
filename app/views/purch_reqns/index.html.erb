<% content_for :content_header do %>
  <b>Purchase Requisition</b>
  <%= link_to new_purch_reqn_path do %>
    <button class="btn btn-sm btn-secondary">
      <i class="ti ti-plus"></i>
      New entry
    </button>
  <% end %>
<% end %>
