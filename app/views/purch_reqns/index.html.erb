   <%= render 'list', purch_reqns: @purch_reqns %>
   <div class="d-flex flex-column justify-content-end h-100 w-100">
    <div style="width: 100%; height: 50px;" class="border shadow-lg">
      <%= paginate @purch_reqns %>
    </div>
  </div>
<% end %>
<%= render "layouts/wrapper", sidebar: true %>