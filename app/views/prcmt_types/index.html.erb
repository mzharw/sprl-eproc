<% content_for :content_header do %>
  <h1>Procurement Type</h1>
  <div class="d-flex gap-3">
    <%= search_filter(prcmt_types_path, 'number', %w[desc created_by]) %>
    <%= link_to new_prcmt_type_path do %>
      <button class="btn btn-secondary">
        <i class="ti ti-plus"></i>
      </button>
    <% end %>
  </div>
<% end %>
<% content_for :content do %>
  <%= render 'list', prcmt_types: @prcmt_types %>
<% end %>
<%= render "layouts/wrapper", sidebar: true %>