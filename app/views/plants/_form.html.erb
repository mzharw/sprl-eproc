<%= form_with(model: plant, html: { class: 'form-container' }) do |form| %>
  <% if plant.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(plant.errors.count, "error" ) %> prohibited this plant from being saved:
      </h2>
      <ul>
        <% plant.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <label for="facility_id">Facility</label>
      <%= selection(form, :facility_id, facilities_path, :id, :name) %>
    </div>

    <div class="col-md-6">
      <label for="code">Code</label>
      <%= form.text_field :code, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="from_date">From Date</label>
      <%= form.date_field :from_date, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="thru_date">Thru Date</label>
      <%= form.date_field :thru_date, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="owner_party_id">Owner Party</label>
      <%= selection(form, :owner_party_id, parties_path, :id, :full_name) %>
    </div>

    <!-- Add more fields as needed -->

  </div>

  <%= form.submit 'Submit', class: 'btn btn-secondary mt-9' %>
<% end %>
