<div id="<%= dom_id buyer %>">
  <table class="table">

    <tr>
      <td>
        <strong>Party:</strong>
      </td>
      <td>
        <%= buyer.party&.full_name %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Code:</strong>
      </td>
      <td>
        <%= buyer.code %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>From date:</strong>
      </td>
      <td>
        <%= buyer.from_date %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Thru date:</strong>
      </td>
      <td>
        <%= buyer.thru_date %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Created at:</strong>
      </td>
      <td>
        <%= buyer.formatted_create %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Updated at:</strong>
      </td>
      <td>
        <%= buyer.formatted_update %>
      </td>
    </tr>
  </table>
</div>
