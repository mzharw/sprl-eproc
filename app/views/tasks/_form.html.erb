<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(task.errors.count, "error" ) %> prohibited this model from being saved:
      </h2>
      <ul>
        <% task.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <label for="number">Number</label>
      <%= form.text_field :number, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="name">Name</label>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="taskable_id">Taskable ID</label>
      <%= form.text_field :taskable_id, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="taskable_type">Taskable Type</label>
      <%= form.text_field :taskable_type, class: 'form-control' %>
    </div>

    <!-- Add more fields as needed -->

  </div>

  <%= form.submit 'Submit', class: 'btn btn-secondary mt-xxl-9' %>
<% end %>
