<%= form_with(model: product, html: { class: 'data-container' }) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(product.errors.count, "error" ) %> prohibited this product from being saved:
      </h2>
      <ul>
        <% product.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <label for="product_type">Product Type</label>
      <%= form.text_field :product_type, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="product_group_id">Product Group</label>
      <%= selection(form, :product_group_id, product_groups_path, :id, :code) %>
    </div>

    <div class="col-md-6">
      <label for="code">Code</label>
      <%= form.text_field :code, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="name">Name</label>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label for="measurement_unit_id">Measurement Unit</label>
      <%= selection(form, :measurement_unit_id, measurement_units_path, :id, :name) %>
    </div>

    <div class="col-md-6">
      <label for="desc">Description</label>
      <%= form.text_area :desc, class: 'form-control', rows: 5 %>
    </div>

    <!-- Add more fields as needed -->

  </div>

  <%= form.submit 'Submit', class: 'btn btn-secondary mt-xxl-9' %>
<% end %>
