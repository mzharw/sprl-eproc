<div class="overflow-x-auto overflow-y-auto bg-white rounded border" style="max-height: 70vh">
  <%= yield :filter %>
  <table class="table table-hover sticky-table" data-controller="sticky-table">
    <%= yield :table %>
  </table>
</div>

<% if defined? model %>
  <div class="pagination d-flex justify-content-between mt-3 rounded overflow-hidden">
    <div class="rounded overflow-hidden">
      <%= paginate model, window: 2 %>
    </div>
    <div class="d-flex gap-1 align-items-center px-3">
      <%= page_entries_info(model, entry_name: defined?(entry_name) ? entry_name : nil) %>
    </div>
  </div>
<% end %>