<%
  class_name =
    if notice
      'text-bg-success'
    elsif alert
      'text-bg-danger'
    else
      ''
    end

  icon_name =
    if notice
      'ti-circle-check'
    elsif alert
      'ti-alert-circle'
    else
      ''
    end
%>

<% if notice || alert %>
  <div data-controller="toast" class="toast align-items-center rounded show overflow-hidden <%= class_name %> border-0 rounded" role="alert" aria-live="assertive" aria-atomic="true" data-toast-delay-value="7000">
    <div class="progress w-100" style="height: 1px;">
      <div class="progress-bar text-bg-info" role="progressbar" aria-label="Example 1px high" style="width: 0;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="d-flex">
      <div class="toast-body">
        <% if icon_name %>
          <i class="ti <%= icon_name %>"></i>
        <% end %>
        <%= notice || alert %>
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
<% end %>

